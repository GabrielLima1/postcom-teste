<%- model_class = Account -%>
<div class="page-header">
  <h1>Detalhes Empresa</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @account.name %></dd><br>
  <dt><strong>Descrição:</strong></dt>
  <dd><%= @account.description %></dd><br>
  <dt>Logo: </dt>
  <!-- Thumb:
  <%= image_tag(@account.avatar.thumb) if @account.avatar %>
  Medium: -->
  <dd><%= image_tag(@account.avatar.medium) if @account.avatar %></dd>
  <!-- Big:
  <%= image_tag(@account.avatar.big) if @account.avatar %> -->
  <hr />
</dl>
<%= link_to 'Voltar',
              accounts_path, :class => 'btn btn-default'  %>
<%= link_to 'Editar',
              edit_account_path(@account), :class => 'btn btn-default' %>
<%= link_to 'Deletar',
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
