<%= simple_form_for @desire, {:multipart => true} do |f| %>
  <%= f.input :title, placeholder: 'Ex: Post Dia das Mães!', label: 'Titulo Postagem:'%>
  <%= f.input :action, collection: ["PROMOÇÃO","PRODUTO","INSTITUCIONAL"], include_blank: false, label: 'Objetivo:'%>
  <%= f.input :description, placeholder: 'Breve descrição da arte que Deseja!', label: 'Descrição:' %>
  <%= f.association :account, include_blank: false, label: "Empresa:"  %>
  <%= f.label 'Imagem de Referência:' %>
  <%= f.file_field :avatar %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %> 

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                desires_path, :class => 'btn btn-default' %>
<% end %>
